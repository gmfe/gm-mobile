{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "start-storybook",
    "build": "build-storybook -c .storybook -o docs",
    "prebuild": "rm -rf docs; mkdir docs;",
    "publish-latest": "lerna publish --force-publish",
    "publish-beta": "lerna publish --force-publish --dist-tag beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "lint-staged": {
    "./packages/**/*.js": [
      "eslint --cache --fix"
    ],
    "./packages/**/*.less": [
      "stylelint --cache --fix"
    ]
  },
  "browserslist": {
    "production": [
      "iOS >= 8",
      "Android >= 5.0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.8.6",
    "@gm-common/tool": "^2.2.9",
    "@gm-react-app/scripts-lib": "^3.1.2",
    "@storybook/addon-info": "^5.3.14",
    "@storybook/addon-notes": "^5.3.14",
    "@storybook/addon-storysource": "^5.3.14",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.14",
    "@storybook/theming": "^5.3.18",
    "@svgr/webpack": "^5.4.0",
    "@types/react": "^16.9.34",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-gm-react-app": "^3.1.2",
    "big.js": "^5.2.2",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-plugin-gm-react-app": "^3.1.2",
    "file-loader": "^6.0.0",
    "gm-i18n": "^2.8.0",
    "husky": "^4.2.5",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.2.0",
    "lodash": "^4.17.15",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "query-string": "^6.12.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-window": "^1.8.5",
    "sortablejs": "^1.10.2",
    "style-loader": "^1.2.1",
    "styled-components": "^5.0.1",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0"
  }
}
